              <input type="hidden" name="theater_name" value='<%="#{theater[:name]}"%>'>
              <input type="hidden" name="movie_name" value='<%="#{movie[:title]}"%>'></li>

        <li><input id="movie[title]" type="hidden" value='<%="#{movie[:title]}"%>' name="movie_title"  ><%= movie[:title] %> | <%= movie[:movie_info] %></li>

           <ul> <% movie[:run_times].each do |time| %>
              <li><input type="radio" name="movie_time" value='<%="#{time}"%>'>

                <%= time%></li>

          

              <%end%>
            </ul>
      <% end %>
      </ol>
  <% end %>
</ul>

