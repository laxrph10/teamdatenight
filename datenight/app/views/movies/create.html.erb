<%= form_tag("/restaurants") do %>

<% @movies.each do |theater| %>
	<%= theater[:theater][:name] %>
	<br>
		<% theater[:movies].each do |movie| %>
				<%= radio_button_tag(:movie, movie[:title], :theater_zip, theater[:theater][:postal_code]) %>
				<%= label_tag(movie[:title]) %>
				<br>
		<% end %>
			<br>
	<% end %>
	  <%= submit_tag 'Submit' %>
<%end%>
