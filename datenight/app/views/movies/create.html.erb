<h1>Theaters and Movie Times near <%= @zipcode %>:</h1>


<%= form_tag("/restaurants") do %>
  <ul><% @theaters_array.each do |theater|%>
    <h3>Theater:</h3>

    <li><%= theater[:name]%></li>
    <li><%= theater[:number]%></li>

    <li>
      <input id= "<%theater[:address]%>" type="hidden" value='<%="#{theater[:address]}"%>' name="theater_address" >
     <%= theater[:address]%>
   </li>

