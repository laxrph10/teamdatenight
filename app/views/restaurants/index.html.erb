            }
            
            td:before { 
                  /* Now like a table header */
                  position: absolute;
                  /* Top/left values mimic padding */
                  top: 6px;
                  left: 6px;
                  width: 45%; 
                  padding-right: 10px; 
                  white-space: nowrap;
            }
            
            /*
            Label the data
            */
            td:nth-of-type(1):before { content: ""; }
